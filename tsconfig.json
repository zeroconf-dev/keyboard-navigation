{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2018",
        "module": "es2015",
        "jsx": "react",
        "esModuleInterop": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "lib": ["dom", "es2018", "ES2020"],
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "@zeroconf/keyboard-navigation/*": ["src/*"],
            "@zeroconf/keyboard-navigation": ["src/index"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": [".docz", ".storybook", "build", "docs", "examples", "node_modules", "package", "reports"]
}
