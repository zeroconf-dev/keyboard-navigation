{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2018",
        "module": "es2015",
        "jsx": "react-jsxdev",
        "esModuleInterop": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "lib": ["dom", "es2018", "ES2020"],
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "@zeroconf/keyboard-navigation/*": ["src/*"],
            "@zeroconf/keyboard-navigation": ["src/index"],
            "@testing-library/react": ["node_modules/@testing-library/react/types/index.d.ts"],
        },
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": [".storybook", "build", "examples", "node_modules", "package", "reports"],
}
